<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="SchoolDesk"]/building</xpath>

        <match Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName="SchoolDesk"]/building</xpath>
            <value>
                <relatedBuildCommands />
            </value>
        </match>
    </Operation>
    <Operation Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="SchoolDesk"]/building/relatedBuildCommands</xpath>

        <match Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName="SchoolDesk"]/building/relatedBuildCommands</xpath>
            <value>
              <li>Stool</li>
              <li>DiningChair</li>
              <li>Armchair</li>
            </value>
        </match>
    </Operation>
</Patch>